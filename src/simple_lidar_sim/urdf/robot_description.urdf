<robot name="simple_robot">
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.1"/>
      </geometry>
    </visual>
  </link>
  <link name="laser">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.1"/>
      </geometry>
      <origin xyz="0.2 0 0.1" rpy="0 0 0"/>
    </visual>
    <sensor type="laser" name="base_scan">
      <origin xyz="0.2 0 0.1" rpy="0 0 0"/>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-1.5708</min_angle>
            <max_angle>1.5708</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.0</min>
          <max>10.0</max>
        </range>
      </ray>
    </sensor>
  </link>
</robot>

